<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relative"
    android:background="@mipmap/notepad">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Word"
        android:textColor="#000000"
        android:id="@+id/enterword"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:id="@+id/word"
        android:textColor="#000000"
        android:layout_below="@+id/enterword"
        android:layout_alignStart="@+id/meaning" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word"
        android:text="Enter Meaning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/entermeaning"
        android:textStyle="bold|italic"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:id="@+id/meaning"
        android:textColor="#000000"
        android:layout_below="@+id/entermeaning"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="50dp"
        android:layout_below="@id/meaning"
        android:layout_centerHorizontal="true"
        android:id="@+id/save"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:background="@drawable/sel"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Jump to Stored Word Meanings >>"
    android:layout_below="@+id/save"
    android:textColor="#000000"
    android:textSize="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/jump"
    android:background="@drawable/sel"
    android:textStyle="bold|italic"
    />

</RelativeLayout>
</ScrollView>